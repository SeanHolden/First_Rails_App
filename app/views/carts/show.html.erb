<% if notice %>
  <p id="notice"><%= notice %></p> 
<% end %>

<div class="cart_title">Your Cart</div> 

<%###########################SEANS CODE###################################################%>
<p><strong>Number of items currently in cart: <%= @total_items %></strong></p>
<%###########################################################################################%>

<table>
  <% @cart.line_items.each do |item| %> 
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price, :unit => "Â£") %></td>
      <td><%= button_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr> 
  <% end %>

    <tr class="total_line">
	  <td colspan="2">Total</td>
      <td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "Â£") %></td> 
    </tr>
</table>

<%= link_to 'Continue Shopping', store_path %> <br />
<p><%= button_to 'Empty Cart', @cart, confirm: 'Are you sure you want to empty your cart?', method: :delete %></p>






